<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure>
    <deployment>

        <!-- Disable CDI (Weld) -->
        <exclude-subsystems>
            <subsystem name="weld"/>
            <subsystem name="jsf"/>
            <subsystem name="batch"/>
        </exclude-subsystems>

        <!-- Prevent JSF / CDI modules from loading -->
        <exclusions>
            <module name="jakarta.faces.api"/>
            <module name="jakarta.faces.impl"/>
            <module name="org.jboss.weld.core"/>
            <module name="org.jboss.weld.spi"/>
            <module name="org.jboss.weld.environment.servlet"/>
        </exclusions>

    </deployment>
</jboss-deployment-structure>

